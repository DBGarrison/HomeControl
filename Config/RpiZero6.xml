<?xml version="1.0"?>
<RaspberryPi xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <port>8000</port>
  <ipAddress>RpiZero6</ipAddress>
  <dbgLevel>Info</dbgLevel>
  <services>MotionService WeatherService</services>
  <Relays>
    <RelayConfig>
      <area>Tower</area>
      <localDeviceId>0</localDeviceId>
      <remoteDeviceId>0</remoteDeviceId>
      <deviceName>Tower SE</deviceName>
      <deviceType>Relay</deviceType>
      <pin>4</pin>
      <state>0</state>
      <normallyOn>0</normallyOn>
    </RelayConfig>
  </Relays>
  <rfConfig>
    <sendPin>0</sendPin>
    <recvPin>0</recvPin>
    <pulseLength>275</pulseLength>
    <repeatTransmit>5</repeatTransmit>
  </rfConfig>
  <RFSwitches />
  <PirDevices>
    <PIRConfig>
      <area>Tower</area>
      <localDeviceId>0</localDeviceId>
      <remoteDeviceId>0</remoteDeviceId>
      <deviceName>Tower SE</deviceName>
      <deviceType>Motion</deviceType>
      <pin>1</pin>
      <relayType>NoRelay</relayType>
      <relayDeviceId>1</relayDeviceId>
    </PIRConfig>
  </PirDevices>
  <detectDuration>5000</detectDuration>
  <serverOpts>
    <browse>true</browse>
    <browseFolder>.</browseFolder>
    <rewrites>0</rewrites>
  </serverOpts>
  <webHost>
    <port>5000</port>
    <ipAddress>homepc</ipAddress>
  </webHost>
  <dht11>
    <pin>16</pin>
    <maxTimings>85</maxTimings>
    <maxSamples>100</maxSamples>
  </dht11>
</RaspberryPi>